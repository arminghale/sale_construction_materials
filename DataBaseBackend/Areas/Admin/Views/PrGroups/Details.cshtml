        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.vahed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vahed)
        </dd>
        <dt class="col-sm-2">
